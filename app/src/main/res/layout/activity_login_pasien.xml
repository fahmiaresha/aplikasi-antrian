<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_pasien"
    tools:context=".LoginPasien">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:layout_marginTop="200dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editTextTextPersonName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/custom_edit_text"
            android:ems="10"
            android:hint="Username"
            android:inputType="textPersonName"
            android:paddingStart="60dp"
            android:paddingLeft="60dp"
            android:paddingTop="15dp"
            android:paddingEnd="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="15dp"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/editTextTextPersonName2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_edit_text"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingStart="60dp"
            android:paddingLeft="60dp"
            android:paddingTop="15dp"
            android:paddingEnd="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="15dp"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/forgot_password_pasien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_gravity="right"
            app:layout_constraintTop_toTopOf="parent"
            android:textStyle="bold"
            android:text="Forgot password ? "
            android:textColor="@color/red"/>

        <Button
            android:id="@+id/btn_login_pasien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Log in"
            android:textColor="@android:color/white"
            android:textAllCaps="false"
            android:background="@color/btn_hijau"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="225dp"
        >
        <TextView
            android:id="@+id/text_sign_up"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="I'm a new user,"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/textview_sign_up"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text=" Sign up"
            android:layout_toRightOf="@+id/text_sign_up"
            android:textStyle="bold"
            />

    </RelativeLayout>


    <!--    <Button-->
    <!--        android:id="@+id/button5"-->
    <!--        android:layout_width="122dp"-->
    <!--        android:layout_height="42dp"-->
    <!--        android:background="@drawable/forgot_password"-->
